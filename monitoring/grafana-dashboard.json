{
  "dashboard": {
    "id": null,
    "title": "SaaS Platform Dashboard",
    "tags": ["saas", "multi-tenant"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Tenant Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{kubernetes_namespace}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "Tenant Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=~\"tenant.*\"}",
            "legendFormat": "{{namespace}}"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
